# Server Configuration
PORT=3000
NODE_ENV=development

# Database Configuration (MySQL)
DB_HOST=localhost
DB_PORT=3306
DB_NAME=stamentai
DB_USER=root
DB_PASSWORD=your_mysql_password
DB_SSL=false

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d

# Redis Configuration
REDIS_URL=redis://127.0.0.1:6379

# Email Configuration (Optional - for password reset, etc.)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-password
EMAIL_FROM=noreply@stamentai.com

# Admin User (Optional - created on first run)
ADMIN_EMAIL=admin@stamentai.com
ADMIN_PASSWORD=admin123

# AI/Processing Configuration
GROQ_API_KEY=your_groq_api_key
LLM_PROVIDER=groq

# Google Cloud (Optional)
GOOGLE_PROJECT_ID=your_project_id
GOOGLE_LOCATION=us
GOOGLE_DOCAI_PROCESSOR_ID=your_processor_id
GOOGLE_DOCAI_ENDPOINT=your_endpoint

# Google OAuth (Optional)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Paddle (Payment Processing)
PADDLE_VENDOR_ID=your_paddle_vendor_id
PADDLE_API_KEY=your_paddle_api_key
PADDLE_PUBLIC_KEY="-----BEGIN PUBLIC KEY-----\n...\n-----END PUBLIC KEY-----"
PADDLE_WEBHOOK_SECRET=your_paddle_webhook_secret
PADDLE_PRODUCT_STARTER_ID=product_id
PADDLE_PRODUCT_PRO_ID=product_id
PADDLE_PRODUCT_BUSINESS_ID=product_id
